{
  "version": "3.5",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}